---
import Layout from "../layouts/Layout.astro";

import Tags from "../components/Tags/Tags.astro";
import Back from "../components/buttons/back.astro";

import Figma from "../components/buttons/figma.astro";
import Github from "../components/buttons/github.astro";
import Website from "../components/buttons/website.astro";

import { nexusData } from "../data/nexusData.ts";
---

<Layout title="Nexus">
  <section
    class="z-30 mx-auto mt-56 flex w-full max-w-[108rem] items-start justify-start text-white lg:p-0 p-10"
  >
    <div class="flex flex-col gap-9">
      <Back />
      <h2 class="font-RobotoSlabBold text-white lg:text-6xl text-5xl">Nexus</h2>
      <div class="flex gap-4 flex-wrap">
        {
          nexusData.map(({ name, svg, bgColor, textColor }) => (
            <Tags
              name={name}
              svg={svg}
              bgColor={bgColor}
              textColor={textColor}
            />
          ))
        }
      </div>
      <p class="font-RobotoSlabRegular text-white lg:text-2xl text-xl">
        This is an interactive website created for the F1 in Schools competition
        in Costa Rica. It features 3D models of the car and team stand, built
        using Three.js. The website provides an engaging experience by allowing
        users to explore and interact with the models in a dynamic 3D
      </p>
      <div class="flex justify-start items-center gap-4">
        <Github
          href="https://github.com/DAVAS110/Nexus"
        />
        <Figma
          href="https://www.figma.com/design/Jl4kcwFdbMW9UHZ0grjgmi/Landing-Nexus-Website-2.0?node-id=1-3&t=623o9F7sUqjtKNSe-1"
        />
        <Website
          href="https://www.nexusracingf1.com">
      </div>
    </div>
  </section>
</Layout>
